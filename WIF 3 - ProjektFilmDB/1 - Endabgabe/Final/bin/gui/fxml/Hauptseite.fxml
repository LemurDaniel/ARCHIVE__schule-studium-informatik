<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="800.0" prefWidth="1700.0" stylesheets="@../css/detail.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.HauptseiteCtrl">
  <children>
      <TableView fx:id="table" prefHeight="903.0" prefWidth="1681.0">
        <columns>
          <TableColumn fx:id="t_Titel" prefWidth="630.0" text="Titel" />
          <TableColumn fx:id="t_genre" minWidth="0.0" prefWidth="438.0" text="Genre" />
            <TableColumn fx:id="t_bewertung" minWidth="0.0" prefWidth="103.0" styleClass="tc" text="Bewertung" />
            <TableColumn fx:id="t_dauer" minWidth="0.0" prefWidth="326.0" styleClass="tc" text="Laufzeit" />
            <TableColumn fx:id="t_jahr" minWidth="0.0" prefWidth="141.0" styleClass="tc" text="Erscheinungsjahr" />
        </columns>
      </TableView>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="36.0" prefWidth="1028.0">
              <buttons>
                  <Button fx:id="btn_filter" mnemonicParsing="false" onAction="#action" text="Filter" />
                  <Button fx:id="btn_liste" mnemonicParsing="false" onAction="#action" text="Listensicht" />
                  <Button fx:id="btn_detail" mnemonicParsing="false" onAction="#action" text="Detailansicht" />
                  <Button fx:id="btn_update" mnemonicParsing="false" onAction="#action" text="Modifizieren" />
                  <Button fx:id="btn_add" mnemonicParsing="false" onAction="#action" text="Hinzufügen" />
                  <Button fx:id="btn_abmelden" mnemonicParsing="false" onAction="#action" text="Abmelden" />
                  <ImageView fx:id="muell" fitHeight="36.0" fitWidth="51.0" pickOnBounds="true" preserveRatio="true" visible="false">
                     <image>
                        <Image url="@../images/delete.png" />
                     </image>
                  </ImageView>
              </buttons>
               <HBox.margin>
                  <Insets left="30.0" right="30.0" />
               </HBox.margin>
            </ButtonBar>
            <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="36.0" prefWidth="951.0">
              <buttons>
                  <Button fx:id="btn_credits" mnemonicParsing="false" onAction="#action" text="Credits" />
                  <Button fx:id="btn_status" mnemonicParsing="false" onAction="#action" text="Status" />
                  <Button fx:id="btn_reset" mnemonicParsing="false" onAction="#action" text="Zurücksetzen" />
                  <Button fx:id="btn_save" mnemonicParsing="false" onAction="#action" text="Speichern" />
                  <Button fx:id="btn_refresh" mnemonicParsing="false" onAction="#action" text="Aktualisieren" />
              </buttons>
               <HBox.margin>
                  <Insets left="30.0" right="30.0" />
               </HBox.margin>
            </ButtonBar>
         </children>
      </HBox>
  </children>
</VBox>
